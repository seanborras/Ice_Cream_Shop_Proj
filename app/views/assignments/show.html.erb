<div class="grey lighten-4" id="form">
<h2> Assignment Information</h2>
<p id="notice"><%= notice %></p>

<p>
  <strong>Store:</strong>
  <%= @assignment.store_id %>
</p>

<p>
  <strong>Employee:</strong>
  <%= @assignment.employee_id %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @assignment.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @assignment.end_date %>
</p>

<p>
  <strong>Pay level:</strong>
  <%= @assignment.pay_level %>
</p>

<br/>
<%= link_to 'Edit', edit_assignment_path(@assignment),  :class=> "waves-effect waves-light btn light-blue"  %>
<%= link_to 'Delete', @assignment, method: :delete, :class=> "waves-effect waves-light btn red" %>
<%= link_to 'Back', assignments_path, :class=> "waves-effect waves-light btn green"  %>

</div>