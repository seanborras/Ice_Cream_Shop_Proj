<div class="grey lighten-4" id="form">
<p id="notice"><%= notice %></p>
<h1>Current Assignments</h1>
<% if @current_assignments.size <= 0 then%>

<p> Section is currently empty</p>

<% else%>



<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.store_id %></td>
        <td><%= assignment.employee_id %></td>
        <td><%= assignment.start_date %></td>
        <td><%= link_to 'Show', assignment, :class=> "waves-effect waves-light btn light-blue" %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment), :class=> "waves-effect waves-light btn green"  %></td>
        <td><%= link_to 'Delete', assignment, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "waves-effect waves-light btn red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

<h1>Past Assignments</h1>
<% if @past_assignments.size <= 0 then%>

<p> Section is currently empty</p>

<% else %>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.store_id %></td>
        <td><%= assignment.employee_id %></td>
        <td><%= assignment.start_date %></td>
        <td><%= assignment.end_date %></td>
        <td><%= link_to 'Show', assignment, :class=> "waves-effect waves-light btn light-blue" %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment), :class=> "waves-effect waves-light btn green"  %></td>
        <td><%= link_to 'Delete', assignment, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "waves-effect waves-light btn red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>

<br />
<%= link_to 'New Assignment', new_assignment_path, :class=> "waves-effect waves-light btn orange"  %>

</div>