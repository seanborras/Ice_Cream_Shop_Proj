<div class="grey lighten-4" id="form">
<p id="notice"><%= notice %></p>
<% if (!@upcoming_shifts.nil?) then %>

<h1>Upcoming Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_shifts.each do |shift| %>
      <tr>
        <td><%= shift.assignment_id %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td><%= link_to 'Show', shift, :class=> "waves-effect waves-light btn light-blue" %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift), :class=> "waves-effect waves-light btn green" %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?', :class=> "waves-effect waves-light btn red" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%end%>
<br>
<% if (!@past_shifts.nil?) then %>

<h1>Past Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_shifts.each do |shift| %>
      <tr>
        <td><%= shift.assignment_id %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td><%= link_to 'Show', shift, :class=> "waves-effect waves-light btn light-blue" %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift), :class=> "waves-effect waves-light btn green" %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "waves-effect waves-light btn red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%end%>


<br/>
<%= link_to 'New Shift', new_shift_path, :class=> "waves-effect waves-light btn orange" %>

</div>