<div class="grey lighten-4" id="form">
<h2> Shift Information</h2>
<p id="notice"><%= notice %></p>

<p>
  <strong>Assignment:</strong>
  <%= @shift.assignment_id %>
</p>

<p>
  <strong>Date:</strong>
  <%= @shift.date %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @shift.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @shift.end_time %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @shift.notes %>
</p>

<br/>
<%= link_to 'Edit', edit_shift_path(@shift), :class=> "waves-effect waves-light btn light-blue" %>
<%= link_to 'Delete', @shift, method: :delete, :class=> "waves-effect waves-light btn red" %>
<%= link_to 'Back', shifts_path, :class=> "waves-effect waves-light btn green" %>

</div>