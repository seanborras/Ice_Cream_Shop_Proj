<div class="grey lighten-4" id="form">
<p id="notice"><%= notice %></p>

<h1>Active Stores</h1>

<% if @active_stores.size <= 0 then%>

<p> Section is currently empty</p>

<% else %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store,  :class=> "waves-effect waves-light btn light-blue"   %></td>
        <td><%= link_to 'Edit', edit_store_path(store),  :class=> "waves-effect waves-light btn green"   %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' },  :class=> "waves-effect waves-light btn red"   %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>
<h1>Inactive Stores</h1>
<% if @inactive_stores.size <= 0 then%>

<p> Section is currently empty</p>

<% else %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inactive_stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store,  :class=> "waves-effect waves-light btn light-blue"  %></td>
        <td><%= link_to 'Edit', edit_store_path(store),  :class=> "waves-effect waves-light btn green"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>

<br />
<%= link_to 'New Store', new_store_path, :class=> "waves-effect waves-light btn orange"  %>

</div>
