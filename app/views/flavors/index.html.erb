<div class="grey lighten-4" id="form">
<p id="notice"><%= notice %></p>

<h1>Active Flavors</h1>
<% if @active_flavors.size <= 0 then%>

<p> Section is currently empty</p>

<% else %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_flavors.each do |flavor| %>
      <tr>
        <td><%= flavor.name %></td>
        <td><%= flavor.active %></td>
        <td><%= link_to 'Show', flavor, :class=> "waves-effect waves-light btn light-blue"  %></td>
        <td><%= link_to 'Edit', edit_flavor_path(flavor), :class=> "waves-effect waves-light btn green"  %></td>
        <td><%= link_to 'Destroy', flavor, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "waves-effect waves-light btn red"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%end%>
<br>

<h1>Inactive Flavors</h1>
<% if @inactive_flavors.size <= 0 then%>

<p> Section is currently empty</p>

<% else %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inactive_flavors.each do |flavor| %>
      <tr>
        <td><%= flavor.name %></td>
        <td><%= flavor.active %></td>
        <td><%= link_to 'Show', flavor, :class=> "waves-effect waves-light btn light-blue"  %></td>
        <td><%= link_to 'Edit', edit_flavor_path(flavor), :class=> "waves-effect waves-light btn green"  %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>

<br/>
<%= link_to 'New Flavor', new_flavor_path, :class=> "waves-effect waves-light btn orange"  %>

</div>
